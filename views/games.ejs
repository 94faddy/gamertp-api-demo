<!DOCTYPE html>
<html lang="th">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %> - Casino Wallet</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-image: url(https://wallpapercat.com/w/full/b/6/c/2173264-3840x2160-desktop-4k-neon-abstract-background-image.jpg);
            background-position: center;
            background-repeat: no-repeat;
            background-size: cover;
            min-height: 100vh;
        }
        
        /* ‚≠ê Page Header - ‡∏™‡∏µ‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ö transactions & wallet */
        .page-header {
            background: linear-gradient(135deg, #740091 0%, #e17676 100%);
            border-radius: 15px;
            padding: 30px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .page-header h2 {
            color: #ffffff;
            font-weight: bold;
            margin-bottom: 10px;
        }
        
        .page-header .text-muted {
            color: #ffffff !important;
            margin-bottom: 0;
        }
        
        /* ‚≠ê Balance Display - ‡∏™‡∏µ‡∏õ‡∏£‡∏∞‡∏°‡∏≤‡∏ì‡πÄ‡∏î‡∏µ‡∏¢‡∏ß‡∏Å‡∏±‡∏ö‡∏´‡∏ô‡πâ‡∏≤‡∏≠‡∏∑‡πà‡∏ô */
        .balance-display {
            display: flex;
            align-items: center;
            gap: 15px;
            justify-content: flex-end;
        }
        
        .balance-display .balance-icon {
            width: 50px;
            height: 50px;
            /* background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); */
            /* border-radius: 50%; */
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
            /* box-shadow: 0 4px 15px rgba(102, 126, 234, 0.3); */
        }
        
        .balance-display .balance-info {
            text-align: right;
        }
        
        .balance-display .balance-info small {
            display: block;
            color: #ffffff;
            font-size: 0.85rem;
            margin-bottom: 3px;
        }
        
        .balance-display .balance-amount {
            font-size: 1.3rem;
            font-weight: bold;
            color: #ffffff;
        }
        
        /* ‚≠ê‚≠ê‚≠ê Provider Tabs Style ‚≠ê‚≠ê‚≠ê */
        .provider-tabs {
            background: white;
            border-radius: 15px;
            padding: 20px;
            margin-bottom: 30px;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            display: flex;
            gap: 15px;
            justify-content: center;
            flex-wrap: wrap;
        }
        
        .provider-btn {
            display: flex;
            align-items: center;
            gap: 8px;
            padding: 12px 20px;
            border: 2px solid #e9ecef;
            background: white;
            color: #333;
            border-radius: 10px;
            cursor: pointer;
            transition: all 0.3s;
            text-decoration: none;
            font-weight: 600;
            font-size: 0.95rem;
        }
        
        .provider-btn:hover {
            border-color: #667eea;
            color: #667eea;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.2);
        }
        
        .provider-btn.active {
            border-color: var(--provider-color, #667eea);
            background: var(--provider-color, #667eea);
            color: white;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
        }
        
        .provider-label {
            display: flex;
            flex-direction: column;
            align-items: flex-start;
        }
        
        .provider-name {
            font-weight: bold;
        }
        
        .provider-count {
            font-size: 0.75rem;
            opacity: 0.8;
        }
        
        /* Game Card */
        .game-card {
            background: white;
            border-radius: 15px;
            overflow: hidden;
            box-shadow: 0 5px 20px rgba(0,0,0,0.1);
            transition: all 0.3s;
            margin-bottom: 25px;
            display: flex;
            flex-direction: column;
            height: 100%;
        }
        .game-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 15px 40px rgba(0,0,0,0.2);
        }
        
        .game-image-container {
            width: 100%;
            height: 200px;
            overflow: hidden;
            position: relative;
            background: linear-gradient(135deg, #080107 0%, #7c1f87 100%);
            display: flex;
            align-items: center;
            justify-content: center;
            padding: 10px;
        }
        .game-image {
            width: 100%;
            height: 100%;
            object-fit: contain;
            object-position: center;
            transition: transform 0.3s;
        }
        .game-card:hover .game-image {
            transform: scale(1.05);
        }
        
        .provider-badge {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(255, 255, 255, 0.95);
            color: #667eea;
            padding: 5px 12px;
            border-radius: 20px;
            font-size: 0.75rem;
            font-weight: bold;
            box-shadow: 0 2px 8px rgba(0,0,0,0.2);
        }
        
        .game-info {
            padding: 15px;
            display: flex;
            flex-direction: column;
            flex: 1;
        }
        .game-name {
            font-size: 1rem;
            font-weight: bold;
            margin-bottom: 10px;
            color: #333;
            min-height: 40px;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
            overflow: hidden;
            text-overflow: ellipsis;
        }
        
        .play-btn {
            width: 100%;
            background: linear-gradient(135deg, #d9150c 0%, #ffc107 100%);
            border: none;
            color: white;
            padding: 10px;
            border-radius: 8px;
            font-weight: bold;
            transition: all 0.3s;
            margin-top: auto;
            text-decoration: none;
            display: block;
        }
        .play-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            color: white;
            text-decoration: none;
        }
        
        .search-box {
            background: white;
            border-radius: 10px;
            padding: 15px;
            margin-bottom: 20px;
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .filter-btn {
            margin-right: 10px;
            margin-bottom: 10px;
            border-radius: 20px;
        }
        .error-message {
            background: white;
            border-radius: 15px;
            padding: 40px;
            text-align: center;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
        }
        
        .loading-spinner {
            display: inline-block;
            width: 40px;
            height: 40px;
            border: 4px solid rgba(102, 126, 234, 0.1);
            border-top-color: #667eea;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            to { transform: rotate(360deg); }
        }
        
        .no-games-message {
            text-align: center;
            padding: 60px 20px;
            background: white;
            border-radius: 15px;
        }
    </style>
</head>
<body>
    <%- include('partials/navbar', { active: 'games' }) %>

    <div class="container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h2 class="mb-2">
                        <i class="fas fa-gamepad text-primary me-2" style="color: #fff !important"></i>
                        ‡πÄ‡∏Å‡∏°‡πÅ‡∏ô‡∏∞‡∏ô‡∏≥
                    </h2>
                    <p class="text-muted mb-0">‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏Ñ‡πà‡∏≤‡∏¢‡πÄ‡∏Å‡∏°‡πÅ‡∏•‡∏∞‡πÄ‡∏£‡∏¥‡πà‡∏°‡πÄ‡∏•‡πà‡∏ô‡πÑ‡∏î‡πâ‡πÄ‡∏•‡∏¢</p>
                </div>
                <div class="col-md-4">
                    <div class="balance-display">
                        <div class="balance-icon">
                            <i class="fas fa-wallet"></i>
                        </div>
                        <div class="balance-info">
                            <small>‡∏¢‡∏≠‡∏î‡πÄ‡∏á‡∏¥‡∏ô‡∏Ñ‡∏á‡πÄ‡∏´‡∏•‡∏∑‡∏≠</small>
                            <div class="balance-amount">
                                <%= user.balance.toLocaleString('th-TH', {minimumFractionDigits: 2}) %> <%= user.currency %>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- ‚≠ê‚≠ê‚≠ê Provider Tabs ‚≠ê‚≠ê‚≠ê -->
        <div class="provider-tabs" id="providerTabs">
            <% Object.entries(providers).forEach(([code, provider]) => {
                const isActive = selectedProvider === code;
            %>
                <a href="/games?provider=<%= code %>" 
                   class="provider-btn <%= isActive ? 'active' : '' %>"
                   style="<%= isActive ? '--provider-color: ' + provider.color : '' %>">
                    <span class="provider-label">
                        <span class="provider-count"><%= provider.name %></span>
                    </span>
                </a>
            <% }); %>
        </div>

        <!-- ‚≠ê Loading Indicator ‚≠ê -->
        <div id="loadingIndicator" style="text-align: center; padding: 40px; display: none;">
            <div class="loading-spinner"></div>
            <p class="mt-3 text-white">‡∏Å‡∏≥‡∏•‡∏±‡∏á‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏Å‡∏° <strong id="loadingProvider"></strong>...</p>
        </div>

        <!-- Search and Filter -->
        <div class="search-box" id="searchBox" style="display: <%= games.length > 0 ? 'block' : 'none' %>;">
            <div class="row align-items-center">
                <div class="col-md-6">
                    <div class="input-group">
                        <span class="input-group-text bg-transparent border-0">
                            <i class="fas fa-search"></i>
                        </span>
                        <input 
                            type="text" 
                            class="form-control border-0" 
                            placeholder="‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡πÄ‡∏Å‡∏°..." 
                            id="searchInput"
                        >
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="text-end">
                        <button class="btn btn-outline-primary filter-btn active" data-filter="all">
                            <i class="fas fa-th me-1"></i> ‡∏ó‡∏±‡πâ‡∏á‡∏´‡∏°‡∏î
                        </button>
                        <button class="btn btn-outline-primary filter-btn" data-filter="slot">
                            <i class="fas fa-dice me-1"></i> ‡∏™‡∏•‡πá‡∏≠‡∏ï
                        </button>
                        <button class="btn btn-outline-primary filter-btn" data-filter="live">
                            <i class="fas fa-video me-1"></i> ‡πÑ‡∏•‡∏ü‡πå
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Error Message -->
        <% if (error) { %>
            <div class="error-message">
                <i class="fas fa-exclamation-triangle text-warning fa-3x mb-3"></i>
                <h4>‚ö†Ô∏è ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡πÇ‡∏´‡∏•‡∏î‡πÄ‡∏Å‡∏°‡πÑ‡∏î‡πâ</h4>
                <p class="text-muted"><%= error %></p>
                <p class="text-muted">
                    <i class="fas fa-info-circle me-1"></i>
                    ‡∏ï‡∏±‡∏ß‡πÄ‡∏•‡∏∑‡∏≠‡∏Å: <%= Object.keys(providers).join(', ') %>
                </p>
                <button class="btn btn-primary" onclick="location.reload()">
                    <i class="fas fa-sync-alt me-2"></i> ‡∏•‡∏≠‡∏á‡∏≠‡∏µ‡∏Å‡∏Ñ‡∏£‡∏±‡πâ‡∏á
                </button>
            </div>
        <% } else if (games && games.length > 0) { %>
            <!-- Games Grid -->
            <div class="row row-cols-2 row-cols-md-3 row-cols-lg-4 g-3" id="gamesContainer">
                <% games.forEach(game => { %>
                    <div class="col game-item" 
                         data-name="<%= game.game_name ? game.game_name.toLowerCase() : '' %>"
                         data-type="<%= game.game_type || 'slot' %>">
                        <div class="game-card">
                            <div class="game-image-container">
                                <img 
                                    src="<%= game.image_url || 'https://via.placeholder.com/300x180?text=' + encodeURIComponent(game.game_name) %>" 
                                    alt="<%= game.game_name %>"
                                    class="game-image"
                                    onerror="this.src='https://via.placeholder.com/300x180/667eea/ffffff?text=<%= encodeURIComponent(game.game_name) %>'"
                                >
                                <div class="provider-badge">
                                    <i class="fas fa-tag me-1"></i>
                                    <%= selectedProvider %>
                                </div>
                            </div>
                            <div class="game-info">
                                <div class="game-name" title="<%= game.game_name %>">
                                    <%= game.game_name %>
                                </div>
                                <a 
                                    href="/games/play/<%= selectedProvider %>/<%= game.game_code %>" 
                                    class="play-btn"
                                >
                                    <i class="fas fa-play me-2"></i> ‡πÄ‡∏•‡πà‡∏ô‡πÄ‡∏•‡∏¢
                                </a>
                            </div>
                        </div>
                    </div>
                <% }); %>
            </div>

            <!-- No Results Message -->
            <div class="text-center py-5 d-none" id="noResults">
                <div class="error-message">
                    <i class="fas fa-search fa-3x mb-3 text-muted"></i>
                    <h4>‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÄ‡∏Å‡∏°‡∏ó‡∏µ‡πà‡∏Ñ‡∏∏‡∏ì‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤</h4>
                    <p class="text-muted">‡∏•‡∏≠‡∏á‡∏Ñ‡πâ‡∏ô‡∏´‡∏≤‡∏î‡πâ‡∏ß‡∏¢‡∏Ñ‡∏≥‡∏≠‡∏∑‡πà‡∏ô‡∏´‡∏£‡∏∑‡∏≠‡πÄ‡∏•‡∏∑‡∏≠‡∏Å‡∏´‡∏°‡∏ß‡∏î‡∏´‡∏°‡∏π‡πà‡∏≠‡∏∑‡πà‡∏ô</p>
                </div>
            </div>
        <% } else { %>
            <!-- No Games -->
            <div class="no-games-message">
                <i class="fas fa-gamepad fa-3x mb-3 text-muted"></i>
                <h4>‡∏¢‡∏±‡∏á‡πÑ‡∏°‡πà‡∏°‡∏µ‡πÄ‡∏Å‡∏°‡πÉ‡∏´‡πâ‡∏ö‡∏£‡∏¥‡∏Å‡∏≤‡∏£</h4>
                <p class="text-muted">‡∏Å‡∏£‡∏∏‡∏ì‡∏≤‡∏Å‡∏•‡∏±‡∏ö‡∏°‡∏≤‡πÉ‡∏´‡∏°‡πà‡∏†‡∏≤‡∏¢‡∏´‡∏•‡∏±‡∏á</p>
            </div>
        <% } %>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // ‚úÖ FIX: Get provider from server-side variable safely
        const selectedProvider = '<%= selectedProvider %>';
        document.getElementById('loadingProvider').textContent = selectedProvider;
        
        // Search functionality
        const searchInput = document.getElementById('searchInput');
        const gamesContainer = document.getElementById('gamesContainer');
        const noResults = document.getElementById('noResults');
        const filterBtns = document.querySelectorAll('.filter-btn');
        
        let currentFilter = 'all';

        if (searchInput) {
            searchInput.addEventListener('input', filterGames);
        }

        filterBtns.forEach(btn => {
            btn.addEventListener('click', function() {
                filterBtns.forEach(b => b.classList.remove('active'));
                this.classList.add('active');
                currentFilter = this.dataset.filter;
                filterGames();
            });
        });

        function filterGames() {
            const searchTerm = searchInput ? searchInput.value.toLowerCase() : '';
            const gameItems = document.querySelectorAll('.game-item');
            let visibleCount = 0;

            gameItems.forEach(item => {
                const gameName = item.dataset.name;
                const gameType = item.dataset.type;
                const matchesSearch = gameName.includes(searchTerm);
                const matchesFilter = currentFilter === 'all' || gameType === currentFilter;

                if (matchesSearch && matchesFilter) {
                    item.style.display = 'block';
                    visibleCount++;
                } else {
                    item.style.display = 'none';
                }
            });

            if (noResults) {
                if (visibleCount === 0) {
                    noResults.classList.remove('d-none');
                    if (gamesContainer) gamesContainer.style.display = 'none';
                } else {
                    noResults.classList.add('d-none');
                    if (gamesContainer) gamesContainer.style.display = 'flex';
                }
            }
        }

        // Provider tab switching
        document.querySelectorAll('.provider-btn').forEach(btn => {
            btn.addEventListener('click', function(e) {
                e.preventDefault();
                const provider = this.getAttribute('href').split('provider=')[1];
                console.log('üéÆ Switching to provider:', provider);
                window.location.href = `/games?provider=${provider}`;
            });
        });

        console.log('‚úÖ Games page loaded');
        console.log('üé∞ Current Provider:', selectedProvider);
        console.log('üéÆ Total games loaded:', document.querySelectorAll('.game-item').length);
    </script>
</body>
</html>
